{
  "name": "pilas-bloques-analytics-consumer",
  "version": "0.0.1",
  "description": "Pilas Bloques data users consumer for scientific purposes.",
  "scripts": {
    "dev": "nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.spec.ts' --exec 'ts-node' src/index.ts",
    "build": "tsc",
    "lint": "eslint .",
    "start": "ts-node src/index.ts",
    "seed": "seed --drop-database --replace-id --set-timestamps --db-name pilas-bloques-consumer-test ./test/persistence",
    "test": "npm run seed && npm run test:unit -- --watch",
    "test:CI": "npm run seed && npm run test:unit",
    "test:unit": "DOTENV_CONFIG_PATH=.env.test jest --setupFiles dotenv/config --colors --testPathIgnorePatterns dist --testTimeout 5000 --runInBand",
    "release": "release patch"
  },
  "author": "Fundaci√≥n Sadosky",
  "license": "ISC",
  "dependencies": {
    "@typegoose/typegoose": "^7.6.1",
    "bluebird": "^3.5.1",
    "dotenv": "^8.2.0",
    "mongoose": "5.10.2",
    "node-fetch": "^2.6.1",
    "pilas-bloques-models": "^1.2.24",
    "ts-node": "^9.0.0",
    "yargs": "^15.4.1"
  },
  "devDependencies": {
    "@types/jest": "^26.0.10",
    "@types/mongodb": "^3.5.26",
    "@types/mongoose": "5.10.2",
    "@types/node": "^14.6.1",
    "@types/node-fetch": "^2.5.7",
    "@types/sinon": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "eslint": "^7.8.1",
    "fetch-mock": "^9.11.0",
    "jest": "^26.4.2",
    "mongo-seeding": "^3.7.0",
    "mongo-seeding-cli": "^3.7.0",
    "nodemon": "^2.0.4",
    "release": "^2.5.4",
    "sinon": "^10.0.0",
    "ts-jest": "^26.3.0",
    "typescript": "^4.0.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverage": false
  }
}
